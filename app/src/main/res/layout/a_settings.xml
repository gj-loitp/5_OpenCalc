<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/background_color">

            <ImageView
                android:id="@+id/ivSettingsBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="18dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:backgroundTint="?attr/text_color"
                android:contentDescription="@string/app_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSettingsBackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:paddingVertical="18dp"
                android:text="@string/preferences_title"
                android:textColor="?attr/text_color"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivSettingsBack"
                app:layout_constraintStart_toEndOf="@+id/ivSettingsBack"
                app:layout_constraintTop_toTopOf="@+id/ivSettingsBack" />

            <FrameLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/background_color"
                app:layout_constraintTop_toBottomOf="@+id/tvSettingsBackText" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/flAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp">

    </FrameLayout>
</LinearLayout>
